html, body {
  width: 100%;
  height: 100%;
  overflow: hidden;
  -webkit-overflow-scrolling: touch;
}

input{
  -webkit-appearance: none;
}

*{
  -webkit-tap-highlight-color:rgba(255,255,255,0);
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  outline: none;
  font-family: Droid Sans, Helvetica Neue, Droid Sans Fallback, Heiti SC, sans-serif, Microsoft Yahei;
}
ul{
  list-style: none;
}
